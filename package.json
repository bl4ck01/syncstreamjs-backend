{
  "name": "syncstream-backend",
  "version": "1.0.0",
  "description": "SyncStream TV - Cloud-based IPTV management hub",
  "module": "src/index.js",
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "elysia": "latest",
    "pg": "^8.16.3",
    "stripe": "^18.5.0",
    "zod": "^4.1.5"
  },
  "optionalDependencies": {
    "redis": "^4.7.0"
  },
  "private": true,
  "scripts": {
    "test": "bun test",
    "dev": "bun run --watch src/index.js",
    "start": "NODE_ENV=production bun run src/index.js",
    "start:dev": "NODE_ENV=development bun run --watch src/index.js",
    "db:migrate": "bun run src/db/migrate.js",
    "db:optimize": "psql $DATABASE_URL -f src/db/optimize.sql",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && bun run db:migrate",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'"
  },
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  }
}
